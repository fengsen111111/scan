.food_item {
  background: #FFFFFF;
  padding: 2.67vw 4vw;
  margin-bottom: 1.6vw;
}
.food_item > image {
  width: 25.33vw;
  height: 25.33vw;
  border-radius: 1.33vw;
}
.food_item > .right {
  width: 62.67vw;
}
.food_item > .right > .discount {
  border-top: solid 1px #F5F5F5;
  padding: 1.33vw 0;
}
.food_item > .right > .discount > .left {
  font-size: 3.2vw;
  color: #000000;
}
.food_item > .right > .discount > .left > image {
  width: 4.53vw;
  height: 4.53vw;
  border-radius: 0.53vw;
  margin-right: 1.2vw;
}
.food_item > .right > .recommend {
  border-top: solid 1px #F5F5F5;
  padding: 1.33vw 0;
}
.food_item > .right > .recommend > .right {
  font-weight: bold;
  font-size: 2.67vw;
  color: #ED4133;
}
.food_item > .right > .recommend > .left {
  font-size: 3.2vw;
  color: #000000;
}
.food_item > .right > .recommend > .left > image {
  width: 4.53vw;
  height: 4.53vw;
  border-radius: 0.53vw;
  margin-right: 1.2vw;
}
.food_item > .right > .introduce {
  font-size: 3.2vw;
  color: red;
  background: rgba(255, 0, 0, 0.2);
  margin-bottom: 2.67vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.food_item > .right > .label > .item {
  padding: .4vw 1.33vw;
  margin-right: 1.47vw;
  margin-bottom: 2vw;
  background: #FDECE0;
  border-radius: 0.53vw;
  font-size: 2.67vw;
  color: #C7835A;
}
.food_item > .right > .address {
  font-size: 3.2vw;
  color: #666666;
  margin-bottom: 2vw;
}
.food_item > .right > .info {
  font-weight: 500;
  font-size: 3.2vw;
  color: #666666;
  margin-bottom: 2vw;
}
.food_item > .right > .info > .left {
  font-size: 3.2vw;
  color: #ED4133;
}
.food_item > .right > .info > .left > .star > .item {
  width: 3.2vw;
  height: 3.2vw;
  border-radius: 0.53vw;
  background: #F5F5F5;
  position: relative;
  margin-right: .27vw;
  overflow: hidden;
}
.food_item > .right > .info > .left > .star > .item:last-child {
  margin-right: 1.33vw;
}
.food_item > .right > .info > .left > .star > .item > .bg {
  width: 0;
  height: 100%;
  position: absolute;
  inset: 0;
  z-index: 1;
  background: #ED4133;
}
.food_item > .right > .info > .left > .star > .item > image {
  width: 2.67vw;
  height: 2.67vw;
  position: absolute;
  z-index: 2;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.food_item > .right > .title {
  font-weight: 400;
  font-size: 4vw;
  color: #000000;
  margin-bottom: 2vw;
}
.food_item > .right > .title > text {
  font-size: 2.67vw;
  padding-top: 1.34vw;
  color: #80CF40;
}

