.container {
  height: 100%;
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: constant(safe-area-inset-bottom);
  /*兼容 IOS&gt;11.2*/
  padding-bottom: env(safe-area-inset-bottom);
  /*兼容 IOS&gt;11.2*/
}
.container > .search {
  padding: 2.8vw 4vw;
  background: #FFFFFF;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 3;
}
.container > .search > .search_box {
  height: 8vw;
  background: #F5F5F5;
  border-radius: 4.67vw;
  padding: 0 2.67vw;
}
.container > .search > .search_box > input {
  flex: auto;
  margin-left: 1.2vw;
}
.container > .content {
  height: 10000px;
}
