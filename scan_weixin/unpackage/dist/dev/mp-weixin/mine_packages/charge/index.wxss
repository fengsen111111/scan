.container {
  height: 100%;
  min-height: 100vh;
  background: #F5F5F5;
  padding: 0 4vw;
}
.container > .item {
  background: #FFFFFF;
  box-shadow: 0 0.4vw 0.8vw 0.13vw rgba(0, 0, 0, 0.16);
  border-radius: 2.67vw;
  overflow: hidden;
  margin-bottom: 2.67vw;
}
.container > .item > .info {
  padding: 2.67vw 4vw;
}
.container > .item > .info > .bottom > .pay {
  width: 21.33vw;
  height: 8vw;
  line-height: 8vw;
  text-align: center;
  background: #000000;
  border-radius: 6vw;
  font-weight: bold;
  font-size: 3.73vw;
  color: #f5e8ae;
}
.container > .item > .info > .bottom > .left {
  font-weight: 500;
  font-size: 2.67vw;
  color: #000000;
}
.container > .item > .info > .bottom > .left > .free {
  font-weight: 400;
  font-size: 3.2vw;
}
.container > .item > .info > .bottom > .left > .free > text {
  font-weight: bold;
  font-size: 4vw;
  color: #ED1805;
  margin-left: 2.67vw;
}
.container > .item > .info > .content {
  font-weight: 400;
  font-size: 3.2vw;
  color: #999999;
  margin-bottom: 3.2vw;
}
.container > .item > .info > .title {
  font-weight: bold;
  font-size: 4vw;
  color: #000000;
  margin-bottom: 1.33vw;
}
.container > .item > image {
  width: 100%;
  height: 36.4vw;
}
