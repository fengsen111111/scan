.container {
  height: 100%;
  min-height: 100vh;
  background: #F5F5F5;
}
.container > .list {
  padding: 0 4vw;
  margin-bottom: 2.67vw;
}
.container > .list > .item_box {
  padding: 2.67vw;
  background: #FBFBFB;
  border-radius: 1.33vw;
  border: 0.27vw solid #ED1805;
  margin-bottom: 4vw;
}
.container > .list > .item_box > .get > .charge {
  width: 21.33vw;
  height: 8vw;
  background: #FA4741;
  border-radius: 4vw;
  font-weight: 400;
  font-size: 4vw;
  color: #FFFFFF;
}
.container > .list > .item_box > .type {
  font-weight: 400;
  font-size: 2.67vw;
  color: #666666;
  margin: 1.33vw 0;
}
.container > .list > .item_box > .item {
  padding-bottom: 2.67vw;
  border-bottom: solid 1px #F5F5F5;
}
.container > .list > .item_box > .item > .content {
  font-weight: bold;
  font-size: 4vw;
  color: #ED1805;
  flex: auto;
  align-items: flex-end;
}
.container > .list > .item_box > .item > .content > text {
  font-weight: 500;
  font-size: 2.67vw;
  color: #666666;
}
.container > .list > .item_box > .item > .title {
  font-weight: 400;
  font-size: 3.73vw;
  color: #000000;
  flex: auto;
}
.container > .list > .item_box > .item > .title > text {
  font-weight: 500;
  font-size: 2.67vw;
  color: #666666;
}
.container > .list > .item_box > .item > image {
  width: 9.6vw;
  height: 9.6vw;
  border-radius: 1.33vw;
  margin-right: 2.67vw;
}
.container > .head {
  height: 10.93vw;
  background: #FFFFFF;
  margin-bottom: 2.67vw;
}
.container > .head > .item {
  font-weight: 500;
  font-size: 4vw;
  color: #333333;
}
.container > .head > .active {
  font-weight: bold;
  color: #000000;
}

