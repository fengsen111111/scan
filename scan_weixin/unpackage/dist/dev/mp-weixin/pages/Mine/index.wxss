.mask {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 98;
}
.popup {
  width: 80vw;
  height: 88vw;
  background: #FFFFFF;
  border-radius: 2.67vw;
  position: fixed;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  z-index: 99;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.popup > .save {
  width: 53.33vw;
  height: 8vw;
  line-height: 8vw;
  text-align: center;
  background: #EFA246;
  border-radius: 6vw;
  font-weight: bold;
  font-size: 4vw;
  color: #FFFFFF;
  margin: 0 auto;
}
.popup > image {
  width: 53.33vw;
  height: 53.33vw;
  margin: 8vw auto 10.67vw;
}
.popup > .close {
  position: absolute;
  bottom: -15.47vw;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.container {
  height: 100vh;
  background-color: #F5F5F5;
}
.container > .option {
  width: 86.66vw;
  padding: 2.8vw 2.67vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  margin: 0 auto 2.67vw;
}
.container > .option > .right {
  display: flex;
  align-items: center;
  font-weight: 400;
  font-size: 2.67vw;
  color: #000000;
}
.container > .option > .left {
  font-weight: 400;
  font-size: 4vw;
  color: #000000;
}
.container > .option > .left > image {
  max-width: 6.67vw;
  max-height: 5.33vw;
  margin-right: 2.67vw;
}
.container > .recharge {
  width: 86.66vw;
  font-weight: 500;
  font-size: 3.2vw;
  color: #ED1805;
  position: relative;
  padding: 0 2.67vw;
  height: 8vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  margin: 1.33vw auto 2.67vw;
}
.container > .recharge > .pay {
  width: 13.33vw;
  height: 5.33vw;
  line-height: 5.33vw;
  text-align: center;
  background: #000000;
  border-radius: 6vw;
  font-weight: bold;
  font-size: 3.2vw;
  color: #f5e8ae;
}
.container > .wallet {
  width: 92vw;
  margin: 0 auto;
  position: relative;
  background: #FFFFFF;
  border-radius: 1.33vw;
  padding: 3.73vw 0;
}
.container > .wallet > .vertical {
  width: 0.13vw;
  height: 16vw;
  background: #999999;
  border-radius: 1.33vw;
}
.container > .wallet > .item {
  font-weight: 400;
  font-size: 2.67vw;
  color: #000000;
}
.container > .wallet > .item > image {
  width: 5.33vw;
  height: 5.33vw;
  margin-bottom: 1.33vw;
}
.container > .wallet > .item > text {
  font-weight: bold;
  font-size: 2.67vw;
  color: #000000;
  margin-top: 1.33vw;
}
.container > .userInfo {
  width: 86.66vw;
  height: 16.53vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  margin: 5.47vw auto 2.67vw;
  position: relative;
  padding: 0 2.67vw;
}
.container > .userInfo > image {
  width: 5.23vw;
  height: 5.23vw;
}
.container > .userInfo > .left {
  font-weight: 400;
  font-size: 3.2vw;
  color: #000000;
}
.container > .userInfo > .left > .login {
  font-size: 3.27vw;
  padding: 2vw 3vw;
  border: solid 2px #F4C147;
  border-radius: 2vw;
}
.container > .userInfo > .left > view > .login {
  font-size: 2.27vw;
  padding: 1vw 2vw;
  border: solid 2px #F4C147;
  border-radius: 2vw;
}
.container > .userInfo > .left > .avatar::after {
  border: none;
}
.container > .userInfo > .left > .avatar image {
  width: 12vw;
  height: 12vw;
  border-radius: 50%;
  margin-right: 2.67vw;
}
.container > .userInfo > .left text {
  font-size: 2.67vw;
}
.container .head_bg {
  width: 100%;
  height: 74.8vw;
  position: fixed;
  inset: 0;
}
.container .gray {
  position: absolute;
  top: 65vw;
  width: 100%;
  height: 10vw;
  background: #F5F5F5;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
}
.container .head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 3.33vw;
  padding-right: 3.33vw;
  position: relative;
  margin-bottom: 1.67vw;
}
.container .head > image {
  width: 16.93vw;
  height: 8.53vw;
}

