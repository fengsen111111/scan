.container {
  height: 100vh;
  background: #FFFFFF;
}
.container .content {
  background: #F5F5F5;
}
.container .content .screen {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 16.53vw;
  background: #FFFFFF;
  padding-top: 1.33vw;
  margin-bottom: 1.33vw;
  position: -webkit-sticky;
  position: sticky;
  top: -1px;
}
.container .content .screen > .box {
  width: 100%;
  position: absolute;
  left: 0;
  top: 100%;
  z-index: -1;
}
.container .content .screen > .box > .mask {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
}
.container .content .screen > .list {
  position: absolute;
  top: 100%;
  width: 100%;
  background: #F5F5F5;
}
.container .content .screen > .list > .item {
  margin-bottom: 4vw;
  padding: 0 8vw;
  font-weight: 400;
  font-size: 3.2vw;
  color: #000000;
}
.container .content .screen > .list > .item:first-child {
  margin-top: 4vw;
}
.container .content .screen > .item {
  display: flex;
  align-items: center;
  flex-direction: column;
  font-weight: bold;
  font-size: 3.2vw;
  color: #000000;
}
.container .content .screen > .item > image {
  width: 5.33vw;
  height: 5.33vw;
  margin-bottom: 1.33vw;
}
.container .swiper {
  width: 92vw;
  height: 39.47vw;
  border-radius: 2.67vw;
  background: #FFFFFF;
  margin: 0 auto;
  overflow: hidden;
}
.container .swiper image {
  width: 100%;
  height: 100%;
}
.container .search {
  margin-bottom: 1.67vw;
  padding: 0 4vw;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container .search .scan {
  font-size: 2.67vw;
  color: #999999;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .search .scan > image {
  width: 5.33vw;
  height: 5.33vw;
}
.container .search > .input_box {
  display: flex;
  align-items: center;
  width: 72vw;
  padding: 0 4vw;
  height: 8.33vw;
  background: #F5F5F5;
  border-radius: 4.67vw;
}
.container .search > .input_box > input {
  margin-left: 2.93vw;
  flex: auto;
}
.container .head_bg {
  width: 100%;
  height: 74.8vw;
  position: fixed;
  inset: 0;
}
.container .head {
  display: flex;
  align-items: center;
  padding-left: 3.33vw;
  padding-right: 3.33vw;
  position: relative;
  margin-bottom: 1.67vw;
}
.container .head > image {
  width: 16.93vw;
  height: 8.53vw;
}
