.payContent {
  padding: 4.93vw 4vw;
}
.payContent > .confirm {
  width: 80vw;
  height: 12vw;
  line-height: 12vw;
  text-align: center;
  background: #EFA246;
  border-radius: 6vw;
  margin: 10vw auto 0;
  font-weight: bold;
  font-size: 4vw;
  color: #FFFFFF;
}
.payContent > .chooseItem {
  margin-top: 8.27vw;
  padding: 0 6.67vw;
}
.payContent > .chooseItem > .item {
  font-weight: 400;
  font-size: 3.2vw;
  color: #666666;
}
.payContent > .chooseItem > .item > image {
  max-width: 5.33vw;
  max-height: 5.33vw;
}
.payContent > .chooseItem > .item > text {
  font-weight: bold;
  font-size: 4vw;
  color: #000000;
  margin: 0 2.67vw;
}
.payContent > .title {
  font-weight: bold;
  font-size: 4.27vw;
  color: #000000;
}
.container {
  height: 100%;
  min-height: 100vh;
  background: #F5F5F5;
}
.container > .item {
  width: 86.66vw;
  background: #FFFFFF;
  box-shadow: 0 0.4vw 0.8vw 0.13vw rgba(0, 0, 0, 0.16);
  border-radius: 2.67vw;
  margin: 0 auto 2.67vw;
  padding: 4vw 2.67vw;
}
.container > .item > .pay {
  margin-top: 3.47vw;
}
.container > .item > .pay > .item {
  flex: 1;
  height: 8vw;
  border-radius: 6vw;
  border: 0.27vw solid #EFA246;
  text-align: center;
  line-height: 8vw;
  font-weight: bold;
  font-size: 4vw;
  color: #EFA246;
}
.container > .item > .pay > .goIt {
  border: none;
  background: #EFA246;
  color: #FFFFFF;
  margin-left: 4vw;
}
.container > .item > .price {
  font-weight: bold;
  font-size: 4vw;
  color: #ED1805;
}
.container > .item > .price > text {
  font-weight: bold;
  font-size: 3.2vw;
  color: #666666;
}
.container > .item > .line {
  height: 1px;
  background: #999999;
  margin: 4vw 0;
}
.container > .item > .list {
  font-weight: bold;
  font-size: 4.27vw;
  color: #000000;
  margin-bottom: 5.33vw;
}
.container > .item > .list:last-child {
  margin-bottom: 0;
}
.container > .item > .list > .left {
  font-weight: bold;
  font-size: 4vw;
  color: #000000;
}
.container > .item > .list > .left > image {
  width: 12vw;
  height: 12vw;
  border-radius: 1.33vw;
  margin-right: 4vw;
}
.container > .item > .label {
  font-weight: 500;
  font-size: 3.2vw;
  color: #000000;
  margin-bottom: 2.67vw;
}
.container > .item > .label > text {
  word-break: break-all;
}
.container > .item > .order_num {
  font-weight: 500;
  font-size: 3.2vw;
  color: #000000;
  padding-bottom: 2.67vw;
  border-bottom: solid 1px #999999;
  margin-bottom: 5.33vw;
}
.container > .item > .order_num > text {
  font-weight: 500;
  font-size: 2.67vw;
  color: #EFA246;
}
.container > .top {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  margin-bottom: 1.6vw;
  box-shadow: 0 0.4vw 0.8vw 0.13vw rgba(0, 0, 0, 0.16);
}
.container > .top > .head {
  background: #FFFFFF;
  padding: 2.67vw 4vw;
}
.container > .top > .head > .small_screen {
  margin-top: 4.8vw;
}
.container > .top > .head > .small_screen > .item {
  font-weight: 500;
  font-size: 3.2vw;
  color: #333333;
}
.container > .top > .head > .small_screen > .active {
  font-weight: bold;
  color: #000000;
}
.container > .top > .head > .big_screen > .item {
  font-weight: 500;
  font-size: 4vw;
  color: #333333;
  transition: all .2s;
}
.container > .top > .head > .big_screen > .active {
  font-weight: 700;
  font-size: 4vw;
  color: #000000;
}

